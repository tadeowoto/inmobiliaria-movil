<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:clipToPadding="false"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    tools:context=".inmobiliariaApp.ui.perfil.cambiarPassword.CambiarPasswordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCambiarPassword"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cambiar"
            android:contentDescription="Cambiar contraseña"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTituloCambiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar contraseña"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/imgCambiarPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilContraseniaActual"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Contraseña actual"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="@color/colorPrimary"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvTituloCambiar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etContraseniaActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/colorTextPrimary"
                android:textColorHint="@color/colorTextHint"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvErrorContraseniaActual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ingrese la contraseña actual"
            android:textColor="@color/errorRed"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tilContraseniaActual"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNuevaContrasenia"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nueva contraseña"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="@color/colorPrimary"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvErrorContraseniaActual"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNuevaContrasenia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/colorTextPrimary"
                android:textColorHint="@color/colorTextHint"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvErrorNuevaContrasenia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ingrese una nueva contraseña"
            android:textColor="@color/errorRed"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tilNuevaContrasenia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilRepetirContrasenia"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Repetir nueva contraseña"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="@color/colorPrimary"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvErrorNuevaContrasenia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRepetirContrasenia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/colorTextPrimary"
                android:textColorHint="@color/colorTextHint"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvErrorRepetirContrasenia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Las contraseñas no coinciden"
            android:textColor="@color/errorRed"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tilRepetirContrasenia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorSecondary"
            android:textColor="@color/white"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvErrorRepetirContrasenia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/loaderPerfil"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            app:indicatorSize="40dp"
            app:trackThickness="5dp"
            app:indicatorColor="@color/colorPrimary"
            app:trackColor="@color/colorBackground"
            app:layout_constraintTop_toBottomOf="@id/btnGuardar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>


