<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/colorSecondary"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/tvTituloPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pago #1"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tvFechaPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/09/2025"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvMontoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$23.000,00"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tvDetallePago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle: Pago mensual septiembre"
            android:textColor="@color/colorTextPrimary"
            android:textSize="13sp"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tvEstadoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Confirmado"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            android:textSize="13sp"
            android:paddingTop="4dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
